                    }
                }                
          });
        });
        checkClasses1();
        $('#new-product').on('change.owl.carousel', function(event) {
            checkClasses1();
        });
        function checkClasses1(){
            var total = $('#new-product .owl-stage .owl-item').length;
           // $(' #new-product .owl-stage .owl-item').removeClass( 'has-discount');
            $('#new-product .owl-stage .owl-item').each(function(index){
                if ( index===0 ){
                    $(this).addClass('has-soldout');
                };
                if ( index===2 ){
                    $(this).addClass('has-soldout');
                };
                 if ( index===1 ){
                    $(this).addClass('has-discount');
                };

                 if ( index===3 ){
                    $(this).addClass('count-down');
                    $(this).addClass('has-discount');

                };
                if ( index===6 ){
                    $(this).addClass('has-old-price');
                };
                if ( index===7 ){
                    $(this).addClass('has-discount');
                };
                if ( index===8 ){
                    $(this).addClass('has-discount');
                };
            });
        }


        function appendJSONToHTML(data) {
          var content1 = "";
          var content2 = "";

           for (var i in data["products"]) {
            var img = data["products"][i].img;
            var alt = data["products"][i].alt;
            var sold = data["products"][i].sold;
            var discount = data["products"][i].discount;
            var old = data["products"][i].old;
            var day = data["products"][i].day;
            var hour = data["products"][i].hour;
            var min = data["products"][i].min;
            var sec = data["products"][i].sec;
            var price = data["products"][i].price;
            var name = data["products"][i].name;
            var count = data["products"][i].count;

            content2 += '<div class="product"><div class="image"><figure><img src="' + img +'" alt="' + alt +'"></figure><span class="discount">' + discount + '</span><span class = "soldout">' + sold + '</span><div class="icon"><ul><li><a href="cart.html"><i class= "fas fa-briefcase"></i></a></li><li><a href="compare.html"><i class= "fas fa-sliders-h"></i></a></li><li><a href="#"><i class= "fas fa-heart"></i></a></li><li><a href="#"><i class= "fas fa-eye"></i></a></li></ul></div><div class= "countdown"><div class= "single-count"><span class="count">' + count +'</span><p>'+ day + '</p></div><div class= "single-count"><span class="count">' + count +'</span><p>'+ hour + '</p></div><div class= "single-count"><span class="count">' + count +'</span><p>'+ min + '</p></div><div class= "single-count"><span class="count">' + count +'</span><p>'+ sec + '</p></div></div></div><div class="product-content"><div class="vote"><ul><li><i class="fas fa-star"></i></li><li><i class="fas fa-star"></i></li><li><i class="fas fa-star"></i></li><li><i class="fas fa-star"></i></li><li><i class="fas fa-star"></i></li></ul></div><div class="name"><h4><a href="#">'+ name +'</a></h4></div><div class="price"><span class="new">' + price + '</span><span class="old">'+ old + '</span></div></div></div>';
          }

          $("#new-product").html(content2);
         //  $('.count-down').html(content2);
        }
